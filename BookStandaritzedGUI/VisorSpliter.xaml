<UserControl x:Class="BookStandaritzedGUI.VisorSpliter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStandaritzedGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox>
            <TextBlock Text="Previsualizador Spliter" Foreground="DarkRed" Background="LightSlateGray"/>
        </Viewbox>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <TextBlock x:Name="tbSpliterText" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</UserControl>
