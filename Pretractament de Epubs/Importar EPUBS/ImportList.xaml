<UserControl x:Class="ImportarEPUBS.ImportList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImportarEPUBS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lstEpubs" SelectionChanged="lstEpubs_SelectionChanged"/>
        <Button x:Name="btnImportar" Grid.Row="1" Content="Importar" PreviewMouseLeftButtonUp="btnImportar_PreviewMouseLeftButtonUp"/>
    </Grid>
</UserControl>
